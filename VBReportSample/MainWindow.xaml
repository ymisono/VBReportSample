<Window x:Class="VBReportSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VBReportSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">
    <Grid>
        <!--画像テスト-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Border BorderBrush="Black" BorderThickness="1" Padding="1" Width="256" Height="256" >
                <Image Name="imageContainer" Height="256" />
            </Border>
            <Button Content="テスト用画像でExcelシートを作成" Click="CreateTestImage_Click" Margin="0 8 0 0" />
            <Button Content="任意の画像でExcelシートを作成" Click="CreateOwnImage_Click" Margin="0 8 0 0" />
            <Button Content="間違ったパスでExcelシートを開く" Click="TryToOpenVBReportFromWrongPath_Click" Margin="0 8" Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>
